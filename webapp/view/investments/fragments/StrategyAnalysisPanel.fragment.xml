<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Panel id="strategyAnalysisPanelFragment" headerText="{i18n>strategyAnalysisPanelTitle}" expandable="true" expanded="true" width="100%">
        <content>
            <f:SimpleForm id="strategyAnalysisFormInFragment" editable="true" layout="ResponsiveGridLayout"
                labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12"
                columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false">
                <f:content>

                    <Label text="{i18n>strategyLabelText}" required="true"/>
                    <ComboBox id="strategyComboBoxInFragment"
                        items="{strategyAnalysisModel>/strategies}" selectionChange=".onStrategyChange"
                        placeholder="{i18n>selectStrategyPlaceholder}"
                        selectedKey="{strategyAnalysisModel>/strategyKey}" width="100%">
                        <core:Item key="{strategyAnalysisModel>key}" text="{strategyAnalysisModel>text}"/>
                    </ComboBox>

                    <VBox visible="{strategyAnalysisModel>/controlsVisible}">
                        <!-- BLOCK MACROSSOVER -->
                        <VBox
                            visible="{= ${strategyAnalysisModel>/strategyKey} === 'MACrossover'}"
                            class="sapUiSmallMargin">
                            <HBox justifyContent="SpaceBetween" width="100%" renderType="Bare">
                            <VBox width="48%">
                                <Label text="{i18n>longSMALabelText}"/>
                                <Input
                                id="longSMAInputInFragment"
                                value="{strategyAnalysisModel>/longSMA}"
                                type="Number"
                                placeholder="Ej: 200"
                                width="100%"/>
                            </VBox>
                            <VBox width="48%">
                                <Label text="{i18n>shortSMALabelText}"/>
                                <Input
                                id="shortSMAInputInFragment"
                                value="{strategyAnalysisModel>/shortSMA}"
                                type="Number"
                                placeholder="Ej: 50"
                                width="100%"/>
                            </VBox>
                            </HBox>
                        </VBox>

                        <!-- BLOCK COMÚN (fechas, cantidad) -->
                        <VBox class="sapUiSmallMargin">
                            <Label text="{i18n>startDateLabelText}"/>
                            <DatePicker
                            id="startDatePickerInFragment"
                            value="{
                                path: 'strategyAnalysisModel>/startDate',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: { pattern: 'yyyy-MM-dd' }
                            }"
                            displayFormat="long"
                            width="100%"/>
                            <Label text="{i18n>endDateLabelText}"/>
                            <DatePicker
                            id="endDatePickerInFragment"
                            value="{
                                path: 'strategyAnalysisModel>/endDate',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: { pattern: 'yyyy-MM-dd' }
                            }"
                            displayFormat="long"
                            width="100%"/>
                            <Label class="sapUiTinyMarginTop" text="Monto a invertir (USD)"/>
                            <StepInput
                            value="{strategyAnalysisModel>/stock}"
                            min="1"
                            step="1"
                            displayValuePrecision="0"
                            placeholder="Ej: 10"
                            width="100%"/>
                        </VBox>

                        <!-- BLOCK TURTLE SOUP -->
                        <VBox
                            visible="{= ${strategyAnalysisModel>/strategyKey} === 'Supertrend'}"
                            class="sapUiSmallMargin">
                            <Label text="MA Length" />
                            <Input
                            id="maLengthInput"
                            value="{strategyAnalysisModel>/maLength}"
                            type="Number"
                            placeholder="Ej: 20"
                            width="100%"/>
                            <Label text="ATR Period" />
                            <Input
                            id="atrPeriodInput"
                            value="{strategyAnalysisModel>/atrPeriod}"
                            type="Number"
                            placeholder="Ej: 10"
                            width="100%"/>
                            <Label text="Multiplier" />
                            <Input
                            id="multiplierInput"
                            value="{strategyAnalysisModel>/multiplier}"
                            type="Number"
                            placeholder="Ej: 20"
                            width="100%"/>
                            <Label text="RR (Risk/Reward)" />
                            <Input
                            id="rrInput"
                            value="{strategyAnalysisModel>/rr}"
                            type="Number"
                            placeholder="Ej: 1.5"
                            width="100%"/>
                        </VBox>
                        
                        <!-- BLOCK BOTÓN -->
                        <VBox class="sapUiSmallMargin">
                            <Button
                            id="runAnalysisButtonInFragment"
                            text="{i18n>runAnalysisButtonText}"
                            press=".onRunAnalysisPress"
                            type="Emphasized"
                            width="auto"
                            class="sapUiTinyMarginTop"/>
                        </VBox>
                    </VBox>

                </f:content>
            </f:SimpleForm>
        </content>
    </Panel>
</core:FragmentDefinition>